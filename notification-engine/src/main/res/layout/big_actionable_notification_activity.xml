<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/parent_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center|center_vertical"
    android:paddingLeft="30dp"
    android:paddingRight="30dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:id="@+id/clickable_area"
        android:layout_height="wrap_content"
        android:layout_gravity="center|center_vertical"
        android:background="@color/white_color"
        android:paddingTop="17dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.newshunt.common.view.customview.fontview.NHTextView
            android:id="@+id/notification_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:gravity="center"
            android:lines="2"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:textColor="@color/black_color"
            android:textSize="21dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/mobile_artboard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:src="@drawable/ic_mobile_artboard"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/notification_message" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/activity_card_1"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_marginStart="9dp"
            android:layout_marginTop="62dp"
            android:layout_marginEnd="9dp"
            android:background="@color/white_color"
            android:elevation="3dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/notification_message">

            <com.newshunt.common.view.customview.NHRoundedCornerImageView
                android:id="@+id/card_profile_pic_1"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:layout_marginStart="13dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                app:cornerRadius="4dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_logo_dh"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@+id/card_profile_pic_1" />

            <com.newshunt.common.view.customview.fontview.NHTextView
                android:id="@+id/card_text_1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="13dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:textAlignment="viewStart"
                android:textColor="@color/black_color"
                android:textSize="14dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/card_profile_pic_1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/card_profile_pic_1"
                app:layout_constraintTop_toTopOf="@+id/card_profile_pic_1" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/activity_card_2"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_marginStart="9dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="9dp"
            android:background="@color/white_color"
            android:elevation="3dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/activity_card_1">

            <com.newshunt.common.view.customview.NHRoundedCornerImageView
                android:id="@+id/card_profile_pic_2"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:layout_marginStart="13dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                app:cornerRadius="4dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_logo_dh"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@+id/card_profile_pic_2" />

            <com.newshunt.common.view.customview.fontview.NHTextView
                android:id="@+id/card_text_2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="13dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:textAlignment="viewStart"
                android:textColor="@color/black_color"
                android:textSize="14dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/card_profile_pic_2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/card_profile_pic_2"
                app:layout_constraintTop_toTopOf="@+id/card_profile_pic_2" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/activity_card_3"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_marginStart="9dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="9dp"
            android:background="@color/white_color"
            android:elevation="3dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/activity_card_2">

            <com.newshunt.common.view.customview.NHRoundedCornerImageView
                android:id="@+id/card_profile_pic_3"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:layout_marginStart="13dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                app:cornerRadius="4dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_logo_dh"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@+id/card_profile_pic_3" />

            <com.newshunt.common.view.customview.fontview.NHTextView
                android:id="@+id/card_text_3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="13dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:textAlignment="viewStart"
                android:textColor="@color/black_color"
                android:textSize="14dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/card_profile_pic_3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/card_profile_pic_3"
                app:layout_constraintTop_toTopOf="@+id/card_profile_pic_3" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <CheckBox
            android:id="@+id/enable_disable_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="54dp"
            android:layout_marginTop="35dp"
            android:layout_marginBottom="19dp"
            android:theme="@style/AppThemeDay"
            android:checked="false"
            android:textColor="@color/black_color"
            android:colorControlNormal="#4d000000"
            android:colorControlActivated="#4d000000"
            app:layout_constraintBottom_toTopOf="@+id/enable_disable_notificaton_button"
            app:layout_constraintStart_toStartOf="@+id/mobile_artboard"
            app:layout_constraintTop_toBottomOf="@+id/activity_card_3" />

        <com.newshunt.common.view.customview.fontview.NHTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:textColor="#919191"
            android:textSize="14dp"
            app:layout_constraintBottom_toBottomOf="@+id/enable_disable_checkbox"
            app:layout_constraintStart_toEndOf="@+id/enable_disable_checkbox"
            app:layout_constraintTop_toTopOf="@+id/enable_disable_checkbox" />

        <com.newshunt.common.view.customview.fontview.NHTextView
            android:id="@+id/enable_disable_notificaton_button"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:background="@drawable/actionable_notification_button_background"
            android:enabled="true"
            android:gravity="center"
            android:textColor="@color/white_color"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/mobile_artboard" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>