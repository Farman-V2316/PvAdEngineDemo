<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    tools:ignore="TextViewUsedInXml">

    <ImageView
        android:id="@+id/logo_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_gravity="center"
        android:layout_marginStart="4dp"
        android:layout_marginTop="3dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_notification_ogo" />

    <TextView
        android:id="@+id/titleTv"
        style="@style/StickyNotificationBoldFont"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="3dp"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="1"
        android:textColor="#565868"
        android:textSize="12dp"
        tools:text="Lok Sabha Elections Result" />

    <ImageView
        android:id="@+id/close_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:background="@drawable/notification_refresh_button_bg"
        android:clickable="true"
        android:focusable="true"
        android:padding="3dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_close_noti" />

    <LinearLayout
        android:id="@+id/counting_board"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/titleTv"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:paddingLeft="22dp"
        android:paddingRight="22dp"
        android:paddingBottom="6dp">


    </LinearLayout>

    <LinearLayout
        android:id="@+id/divider_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/counting_board"
        android:background="#F2F2F4"
        android:orientation="horizontal"
        android:paddingLeft="22dp"
        android:paddingRight="22dp" />


    <LinearLayout
        android:id="@+id/row1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/divider_line"
        android:orientation="horizontal"
        android:paddingLeft="22dp"
        android:paddingTop="8dp"
        android:paddingRight="22dp">


    </LinearLayout>

    <LinearLayout
        android:id="@+id/row2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/row1"
        android:orientation="horizontal"
        android:paddingLeft="22dp"
        android:paddingTop="8dp"
        android:paddingRight="22dp">


    </LinearLayout>


    <LinearLayout
        android:id="@+id/row3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/row2"
        android:orientation="horizontal"
        android:paddingLeft="22dp"
        android:paddingTop="8dp"
        android:paddingRight="22dp">

    </LinearLayout>


    <TextView
        android:id="@+id/matchStateTv"
        style="@style/StickyNotificationFont"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/row3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:paddingLeft="22dp"
        android:paddingRight="22dp"
        android:ellipsize="end"
        android:includeFontPadding="false"
        android:maxLines="2"
        android:textAlignment="center"
        android:textColor="#565868"
        android:textSize="10dp"
        tools:text="BJP is currently leading by 34 Seats all over the India aaaaaaaaaaa" />


    <ImageView
        android:id="@+id/brandingImage"
        android:layout_width="90dp"
        android:layout_height="32dp"
        android:layout_below="@+id/matchStateTv"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="12dp"
        android:scaleType="centerCrop" />

    <ImageView
        android:id="@+id/refresh_btn"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_below="@+id/matchStateTv"
        android:layout_alignParentRight="true"
        android:layout_marginTop="12dp"
        android:background="@drawable/notification_refresh_button_bg"
        android:clickable="true"
        android:focusable="true"
        android:padding="3dp"
        android:scaleType="centerCrop" />
</RelativeLayout>