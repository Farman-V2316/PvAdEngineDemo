<androidx.appcompat.widget.Toolbar
    android:id="@+id/actionbar"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/common_topbar_bg"
    android:focusableInTouchMode="true"
    android:gravity="center_vertical"
    android:title=""
    app:contentInsetEnd="0dp"
    app:contentInsetStart="0dp"
    app:contentInsetStartWithNavigation="0dp"
    app:elevation="@dimen/tool_bar_shadow">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            layout="@layout/layout_common_top_bar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="@dimen/search_box_height"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:background="@null"
            android:scaleType="centerInside"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:paddingLeft="@dimen/search_bar_right_spacing"
            android:paddingRight="@dimen/search_bar_right_spacing"
            android:paddingTop="@dimen/search_icon_padding"
            android:paddingBottom="@dimen/search_icon_padding"
            android:visibility="gone"
            android:src="@drawable/ic_settings"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.appcompat.widget.Toolbar>