<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/hashtag_bottom_margin"
    android:layout_marginTop="@dimen/hashtag_bottom_margin"
    android:layout_marginEnd="@dimen/hashtag_end_margin"
    android:orientation="vertical">

    <com.newshunt.common.view.customview.fontview.NHTextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/hashtag_horz_padding"
        android:paddingEnd="@dimen/hashtag_horz_padding"
        android:paddingTop="@dimen/hashtag_vert_padding"
        android:paddingBottom="@dimen/hashtag_vert_padding"
        android:textSize="@dimen/dimen_10"
        android:textAllCaps="true"
        android:textColor="?attr/hashtag_text_color"
        android:background="?attr/hashtag_text_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>