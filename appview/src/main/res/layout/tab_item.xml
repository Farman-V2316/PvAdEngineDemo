<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/tab_item_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:paddingBottom="@dimen/tab_layout_top_padding"
        android:paddingStart="@dimen/tab_icon_left_padding"
        android:paddingEnd="@dimen/tab_icon_right_padding"
        android:paddingTop="@dimen/tab_vertical_padding"
        android:src="@drawable/ic_news_selector"
        android:visibility="gone"/>

    <com.newshunt.common.view.customview.fontview.NHTextView
        android:id="@+id/tab_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:minHeight="@dimen/add_page_sliding_tab_layout"
        android:paddingBottom="@dimen/tab_layout_top_padding"
        android:paddingStart="@dimen/tab_text_side_padding"
        android:paddingEnd="@dimen/tab_text_side_padding"
        android:paddingTop="@dimen/tab_vertical_padding"
        android:textSize="@dimen/news_home_tab_text_size"/>

</RelativeLayout>