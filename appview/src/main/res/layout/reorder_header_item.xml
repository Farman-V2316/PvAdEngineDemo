<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <com.newshunt.common.view.customview.fontview.NHTextView
        android:id="@+id/reorder_header_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="@dimen/reorder_header_text_size"
        android:textStyle="bold"
        android:text="@string/reorder_header"
        android:textColor="?attr/reorder_header_text_color"
        android:layout_marginTop="@dimen/reorder_header_vertical_margin"
        android:layout_marginBottom="@dimen/reorder_header_vertical_margin"
        android:paddingEnd="@dimen/reorder_padding_side"
        android:paddingStart="@dimen/reorder_padding_side"/>
</LinearLayout>