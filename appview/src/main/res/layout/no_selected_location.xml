<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.newshunt.common.view.customview.fontview.NHTextView
        android:id="@+id/no_selected_locations"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/no_location_selected"
        android:textColor="@color/your_added_loc_color"
        android:textSize="@dimen/settings_text_size"
        android:layout_marginStart="@dimen/location_marginStart"
        android:layout_marginEnd="@dimen/location_margin_top"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>