<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#F6EBE7">

    <com.newshunt.common.view.customview.fontview.NHTextView
        android:id="@+id/text_in_locale"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="@dimen/more_news_font_size"
        android:textAlignment="viewStart"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/text_topMargin"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="@dimen/text_topMargin"
        app:layout_constraintEnd_toStartOf="@+id/adjunct_lang_cancel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <com.newshunt.common.view.customview.fontview.NHTextView
        android:id="@+id/text_in_app_lang"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="@dimen/more_news_font_size"
        android:textAlignment="viewStart"
        android:layout_marginTop="@dimen/post_detail_divider"
        android:layout_marginBottom="@dimen/text_topMargin"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="@dimen/text_topMargin"
        app:layout_constraintEnd_toStartOf="@+id/adjunct_lang_cancel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_in_locale"/>

    <ImageView
        android:id="@+id/adjunct_lang_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/cancel_endMargin"
        android:src="@drawable/ic_adjunct_lang_cancel"
        app:layout_constraintEnd_toStartOf="@+id/adjunct_lang_tick"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageView
        android:id="@+id/adjunct_lang_tick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/tick_endMargin"
        android:src="@drawable/ic_adjunct_lang_tick"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>