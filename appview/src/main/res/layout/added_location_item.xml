<LinearLayout android:layout_width="match_parent"
    android:id="@+id/location_item_holder"
    android:layout_height="40dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".common.video.ui.view.AddedLocationsFragment"
    android:gravity="center"
    android:layout_marginBottom="@dimen/dimen_10"
    android:layout_marginTop="@dimen/dimen_10"
    android:layout_marginRight="@dimen/dimen_16"
    android:layout_marginLeft="@dimen/dimen_16"
    android:orientation="horizontal">

    <com.newshunt.common.view.customview.NHRoundedCornerImageView
        android:id="@+id/location_icon"
        android:layout_width="@dimen/dimen_40"
        android:layout_height="@dimen/dimen_40"
        android:scaleType="centerCrop"
        app:cornerRadius="@dimen/ad_image_corner_radius"
        app:roundedCorners="allCorners" />


    <com.newshunt.common.view.customview.fontview.NHTextView
        android:id="@+id/location_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:textColor="@color/white_color"
        android:textStyle="bold"
        android:layout_weight="1"/>

    <CheckBox
        android:id="@+id/loc_check_box"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:checked="true"
        android:button="@drawable/checkbox_selector"
        android:padding="@dimen/dimen_10"
        style="@style/CheckBoxTheme"/>

</LinearLayout>

