<resources>

    <style name="post_title">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">@dimen/text_19</item>
        <item name="android:textColor">?attr/story_card_title_text_color</item>
        <item name="android:maxLines">3</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColorLink">@color/link_color</item>
        <item name="dh_custom_font_weight">six_hundred</item>
    </style>

    <style name="post_collection_title">
        <item name="android:includeFontPadding">true</item>
        <item name="android:textSize">@dimen/text_16</item>
        <item name="android:textColorLink">@color/link_color</item>
        <item name="dh_custom_font_weight">six_hundred</item>
        <item name="android:ellipsize">end</item>
        <item name="android:lines">3</item>
        <item name="android:textColor">?attr/post_collection_title_color</item>
    </style>

    <style name="viral_collection_title">
        <item name="android:includeFontPadding">true</item>
        <item name="android:textSize">@dimen/text_16</item>
        <item name="android:textColor">@color/color_white</item>
        <item name="android:maxLines">3</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColorLink">@color/link_color</item>
        <item name="dh_custom_font_weight">six_hundred</item>
    </style>

    <style name="related_post_title">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">@dimen/text_19</item>
        <item name="android:textColor">?attr/story_card_title_text_color</item>
        <item name="android:maxLines">3</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColorLink">@color/link_color</item>
        <item name="dh_custom_font_weight">seven_hundred</item>
    </style>

    <style name="AstroDatePickerDialogTheme" parent="android:Theme.Holo.Light.Dialog">

        <item name="android:datePickerStyle">@style/MyDatePickerStyle</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <!-- TextView basic style -->

    <style name="HeroCardLabelTheme">
        <item name="android:gravity">center</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="dh_custom_font_weight">six_hundred</item>
        <item name="android:textSize">@dimen/breaking_news_text_size</item>
    </style>

