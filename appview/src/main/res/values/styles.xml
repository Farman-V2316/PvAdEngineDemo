    <style name="live_video_tag">
        <item name="android:textSize">12dp</item>
        <item name="android:background">@drawable/live_video_tag_bg</item>
        <item name="android:paddingStart">@dimen/live_video_tag_padding_horizontal</item>
        <item name="android:paddingEnd">@dimen/live_video_tag_padding_horizontal</item>
