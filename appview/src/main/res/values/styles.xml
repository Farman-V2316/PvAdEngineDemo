    <!--Collection List-->

    <style name="news_detail_sub_section_title">
        <item name="android:textSize">21dp</item>
        <item name="dh_custom_font_weight">eight_hundred</item>
        <item name="android:textColor">?attr/pd_header_title_color</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:layout_marginTop">16dp</item>
    </style>

    <style name="CheckBoxTheme" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">#4d000000</item>
        <item name="colorControlActivated">#1f9ee1</item>
    </style>

    <style name="DatePickerDialogTheme" parent="android:Theme.Material.Light.Dialog">
        <item name="android:datePickerStyle">@style/MyDatePickerStyle</item>
    </style>

    <style name="MyDatePickerStyle" parent="@android:style/Widget.Material.Light.DatePicker">
