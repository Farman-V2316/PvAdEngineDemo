<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <!-- SHADOW LAYER -->
            <item>
                <shape>
                    <gradient
                        android:startColor="#1A000000"
                        android:endColor="#1A000000"
                        android:angle="0"
                        android:type="linear"
                        />
                    <corners
                        android:radius="4dp"/>
                </shape>
            </item>
            <!-- CONTENT LAYER -->
            <item android:bottom="1.5dp"
                android:right="1.5dp"
                android:left="1.5dp"
                android:top="1.5dp">
                <shape>
                    <solid android:color="#FFFFFF"/>
                    <corners android:radius="4dp"/>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>