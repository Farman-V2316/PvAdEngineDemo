<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/story_card_list_background">

    <ProgressBar
        android:id="@+id/missed_call_verification_progress_bar"
        android:layout_width="@dimen/verifying_mobile_no_progress_w_h"
        android:layout_height="@dimen/verifying_mobile_no_progress_w_h"
        android:layout_marginTop="@dimen/missed_call_progressbar_marginTop"
        android:indeterminateDrawable="@drawable/green_progressbar_drawable"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.newshunt.common.view.customview.fontview.NHTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/missed_call_progress_text_marginLeft"
        android:layout_marginStart="@dimen/missed_call_progress_text_marginLeft"
        android:layout_marginTop="@dimen/missed_call_progress_text_marginTop"
        android:gravity="center_horizontal"
        android:text="@string/verifying_mobile_number_string"
        android:textColor="?attr/truecaller_text_color"
        android:textSize="@dimen/verifying_number_textSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/missed_call_verification_progress_bar" />


    <com.newshunt.common.view.customview.fontview.NHTextView
        android:id="@+id/number_verification_terms_and_conditions"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/missed_call_progress_text_marginLeft"
        android:layout_marginStart="@dimen/missed_call_progress_text_marginLeft"
        android:layout_marginBottom="@dimen/missed_called_progress_text_marginBottom"
        android:gravity="center_horizontal"
        android:textColor="@color/truecaller_verify_button_bg_color_day"
        android:textColorLink="@color/follow_color"
        android:textSize="@dimen/actionbar_subtitle_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>