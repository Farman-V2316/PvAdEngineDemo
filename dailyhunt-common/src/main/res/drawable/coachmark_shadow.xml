<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle"> <!-- this shape is used as shadow -->
            <padding
                android:bottom="0dp"
                android:left="00dp"
                android:right="0dp"
                android:top="2dp"/>
            <solid android:color="@color/sticky_shadow_transparency_color"/>
            <corners android:radius="0dp"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle"> <!-- this is for dialog frame -->
            <stroke
                android:color="@color/sticky_shadow_background_color"
                android:width="2dp"/>
            <gradient
                android:angle="45"
                android:startColor="@color/sticky_shadow_background_color"
                android:centerColor="@color/sticky_shadow_background_color"
                android:endColor="@color/sticky_shadow_background_color"
                android:type="linear"/>
        </shape>
    </item>
</layer-list>