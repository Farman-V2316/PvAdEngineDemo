<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Drop Shadow Stack -->
    <item>
        <shape>
            <padding
                android:bottom="1dp"
                android:left="1dp"
                android:right="1dp"
                android:top="0dp"/>
            <solid android:color="#04202020"/>
            <corners android:radius="4dp"/>
        </shape>
    </item>

    <item>
        <shape>
            <padding
                android:bottom="1dp"
                android:left="1dp"
                android:right="1dp"
                android:top="0dp"/>
            <solid android:color="#08202020"/>
            <corners android:radius="4dp"/>
        </shape>
    </item>

    <item>
        <shape>
            <padding
                android:bottom="1dp"
                android:left="1dp"
                android:right="1dp"
                android:top="1dp"/>
            <solid android:color="#14202020"/>
            <corners android:radius="4dp"/>
        </shape>
    </item>

    <item>
        <shape>
            <padding
                android:bottom="1dp"
                android:left="1dp"
                android:right="1dp"
                android:top="1dp"/>
            <solid android:color="#22202020"/>
            <corners android:radius="4dp"/>
        </shape>
    </item>

    <!-- Background -->
    <item>
        <shape>
            <solid android:color="#1C1C1C"/>
            <corners android:radius="4dp"/>
            <stroke
                android:width="0.5dp"
                android:color="#202020"/>
        </shape>
    </item>

</layer-list>