<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape>
            <padding
                android:bottom="1dp"
                android:left="1dp"
                android:right="1dp"
                android:top="1dp"/>
            <solid android:color="#33000000"/>

            <corners android:radius="18dp"/>
        </shape>
    </item>

    <item>
        <shape
            android:shape="rectangle">

            <solid android:color="#ffffff"/>
            <corners android:radius="18dp"/>

        </shape>
    </item>

</layer-list>