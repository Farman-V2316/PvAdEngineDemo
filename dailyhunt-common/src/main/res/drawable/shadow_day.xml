<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <!-- SHADOW LAYER -->
            <item>
                <shape>
                    <gradient
                        android:startColor="@color/theme_day_tab_bar_start_shadow_color"
                        android:endColor="@color/theme_day_tab_bar_end_shadow_color"
                        android:angle="90"
                        android:type="linear"/>
                </shape>
            </item>
            <!-- CONTENT LAYER -->
            <item android:bottom="3dp"
                  android:right="0dp"
                  android:left="0dp"
                  android:top="0dp">
                <shape>
                    <solid android:color="@color/theme_action_bar_day_color"/>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>