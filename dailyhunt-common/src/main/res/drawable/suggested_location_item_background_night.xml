<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <corners
                android:bottomLeftRadius="30dp"
                android:bottomRightRadius="30dp"
                android:radius="60dp"
                android:topLeftRadius="30dp"
                android:topRightRadius="30dp" />

            <size
                android:height="39dp"
                android:width="97dp" />
            <stroke android:width="1dp" android:color="@color/follow_color"/>
            <solid android:color="@color/follow_color"/>
        </shape>
    </item>

    <item android:state_selected="false">
        <shape android:shape="rectangle">
            <corners
                android:bottomLeftRadius="30dp"
                android:bottomRightRadius="30dp"
                android:radius="60dp"
                android:topLeftRadius="30dp"
                android:topRightRadius="30dp" />

            <size
                android:height="39dp"
                android:width="97dp" />
            <stroke android:width="1dp" android:color="@color/suggested_location_border_color_night"/>
            <solid android:color="@color/suggested_location_background_might"/>
        </shape>

    </item>
</selector>