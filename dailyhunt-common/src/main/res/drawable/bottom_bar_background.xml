<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <gradient android:startColor="@color/bottom_bar_shadow_top_bottom"
                      android:endColor="@color/bottom_bar_shadow_top_bottom"
                      android:centerColor="@color/bottom_bar_shadow_center"
                      android:centerY="0.9"
                      android:angle="90"/>
            <corners android:radius="1dp" />
        </shape>
    </item>

    <item
        android:bottom="0dp"
        android:left="0dp"
        android:right="0dp"
        android:top="0dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/background_bottom_tab" />
            <corners android:radius="0dp" />
        </shape>
    </item>
</layer-list>