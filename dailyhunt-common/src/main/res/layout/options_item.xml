<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="?attr/selectableItemBackground"
    android:id="@+id/options_rootview">

    <ImageView
        android:id="@+id/options_icon"
        android:layout_width="@dimen/filter_option_icon_view_width"
        android:layout_height="@dimen/filter_option_icon_view_width"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="@dimen/history_filterText_marginLeft"
        app:srcCompat="?attr/filter_option_item"/>

    <com.newshunt.common.view.customview.fontview.NHTextView
        android:id="@+id/options_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/history_filterText_marginLeft"
        android:textColor="?attr/filterText_color"
        android:textSize="16dp"
        app:dh_custom_font_weight="five_hundred"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/options_icon"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>