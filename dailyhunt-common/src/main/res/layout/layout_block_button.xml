<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout android:id="@+id/toggle_button"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/follow_btn_padding_left"
    android:paddingLeft="@dimen/follow_btn_padding_right"
    android:paddingRight="@dimen/follow_btn_padding_right"
    android:paddingTop="@dimen/follow_btn_padding_left">

    <com.newshunt.common.view.customview.fontview.NHTextView
        android:id="@+id/toggle_on_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/unblock_text"
        android:textAlignment="gravity"
        android:textColor="@color/white_color"
        android:textSize="@dimen/follow_btn_text_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.newshunt.common.view.customview.fontview.NHTextView
        android:id="@+id/toggle_off_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/block_text"
        android:textAlignment="gravity"
        android:textColor="@color/follow_color"
        android:textSize="@dimen/follow_btn_text_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
