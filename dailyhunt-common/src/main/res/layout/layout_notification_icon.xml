<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageButton
        android:id="@+id/notification_image"
        android:layout_width="@dimen/notification_icon_height_width"
        android:layout_height="@dimen/notification_icon_height_width"
        android:src="?attr/notification_icon"
        android:scaleType="fitCenter"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:visibility="visible"/>

    <ImageView
        android:id="@+id/notification_dot_icon"
        android:layout_width="@dimen/red_dot_height_width"
        android:layout_height="@dimen/red_dot_height_width"
        android:background="@drawable/coachmark_red_dot"
        app:layout_constraintRight_toRightOf="@id/notification_image"
        app:layout_constraintTop_toTopOf="@id/notification_image"
        android:visibility="gone"/>

</androidx.constraintlayout.widget.ConstraintLayout>