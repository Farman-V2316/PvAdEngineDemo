<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/disable_battery_optimization_dialog_width"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="?attr/app_rate_dialog_bg"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.newshunt.common.view.customview.fontview.NHTextView
        android:id="@+id/autostart_dialogTitletext"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="start"
        android:layout_marginLeft="@dimen/notification_enable_text_margin_left"
        android:layout_marginRight="@dimen/notification_enable_text_margin_right"
        android:layout_marginTop="46dp"
        android:text="@string/auto_start_dialog_title_text"
        android:textColor="?attr/default_text_color"
        android:textSize="@dimen/notification_title_text_size"
        app:dh_custom_font_weight="eight_hundred"/>

    <com.newshunt.common.view.customview.fontview.NHTextView
        android:id="@+id/autostart_dialogHeadertext"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/autostart_dialogTitletext"
        android:layout_below="@+id/autostart_dialogTitletext"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="@dimen/notification_enable_text_margin_left"
        android:layout_marginRight="@dimen/notification_enable_text_margin_right"
        android:text="@string/auto_start_dialog_header_text"
        android:textColor="?attr/default_text_color"
        android:textSize="14dp"
        app:dh_custom_font_weight="four_hundred"/>

    <com.newshunt.common.view.customview.fontview.NHTextView
        android:id="@+id/positive_button"
        android:layout_width="0dp"
        android:layout_height="42dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/accept_policy_btn_bg"
        android:ellipsize="end"
        android:maxLines="1"
        android:singleLine="true"
        android:text="@{positive}"
        android:textColor="?attr/app_rate_submit_text_color"
        android:textSize="14dp"
        android:layout_marginLeft="@dimen/notification_enable_text_margin_left"
        android:layout_marginRight="@dimen/notification_enable_text_margin_right"
        android:gravity="center"
        app:dh_custom_font_weight="five_hundred"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/autostart_dialogHeadertext"/>


</androidx.constraintlayout.widget.ConstraintLayout>