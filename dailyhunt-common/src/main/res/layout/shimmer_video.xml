<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/news_detail_content_margin_dimen">

    <com.newshunt.common.view.customview.NHShimmerView
        android:id="@+id/shimmer_image"
        android:layout_width="@dimen/shimmer_video_image_size"
        android:layout_height="@dimen/shimmer_video_image_size"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:rounded_radius="@dimen/shimmer_image_radius" />

    <com.newshunt.common.view.customview.NHShimmerView
        android:id="@+id/shimmer_title_1"
        android:layout_width="0dp"
        android:layout_height="@dimen/shimmer_text_height"
        android:layout_marginEnd="@dimen/shimmer_video_title_one_right_margin"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/shimmer_image"
        app:layout_constraintTop_toTopOf="parent"
        app:rounded_radius="@dimen/shimmer_text_radius" />

    <com.newshunt.common.view.customview.NHShimmerView
        android:id="@+id/shimmer_title_2"
        android:layout_width="0dp"
        android:layout_height="@dimen/shimmer_text_height"
        android:layout_marginEnd="@dimen/shimmer_video_title_two_right_margin"
        android:layout_marginTop="@dimen/shimmer_text_views_margin"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/shimmer_image"
        app:layout_constraintTop_toBottomOf="@+id/shimmer_title_1"
        app:rounded_radius="@dimen/shimmer_text_radius" />

    <com.newshunt.common.view.customview.NHShimmerView
        android:id="@+id/shimmer_title_3"
        android:layout_width="@dimen/shimmer_video_title_three_width"
        android:layout_height="@dimen/shimmer_text_height"
        android:layout_marginTop="@dimen/shimmer_text_views_margin"
        app:layout_constraintBottom_toBottomOf="@+id/shimmer_image"
        app:layout_constraintLeft_toLeftOf="parent"
        app:rounded_radius="@dimen/shimmer_text_radius" />

</androidx.constraintlayout.widget.ConstraintLayout>