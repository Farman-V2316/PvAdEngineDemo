<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <!-- SHADOW LAYER -->
            <item>
                <shape>
                    <gradient
                        android:startColor="@color/app_alert_dialog_shadow_color"
                        android:endColor="@color/app_alert_dialog_shadow_color"
                        android:angle="0"
                        android:type="linear"
                        />
                    <corners
                        android:radius="1dip"/>
                </shape>
            </item>
            <!-- CONTENT LAYER -->
            <item android:bottom="1.3dp"
                  android:right="1.3dp"
                  android:left="1.3dp"
                  android:top="1.3dp">
                <shape>
                    <solid android:color="@color/app_alert_dialog_background_color"/>
                    <corners android:radius="1dip"/>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>