<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/tool_tip_bg"
    android:paddingBottom="@dimen/tool_tip_padding_bottom"
   >


    <com.newshunt.common.view.customview.fontview.NHTextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:ellipsize="end"
        android:gravity="center"
        android:includeFontPadding="false"
        android:maxLines="1"
        android:text="Explore Profile"
        android:textColor="@color/tool_tip_title_text_color"
        android:textSize="@dimen/tool_tip_title_text_size"
        android:textStyle="bold" />

    <com.newshunt.common.view.customview.fontview.NHTextView
        android:id="@+id/message"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="5dp"
        android:ellipsize="end"
        android:gravity="center"
        android:includeFontPadding="false"
        android:lineSpacingExtra="2dp"
        android:maxLines="2"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_centerHorizontal="true"
        android:text="find your activity and preferences at one place"
        android:textColor="@color/tool_tip_msg_text_color"
        android:textSize="@dimen/tool_tip_msg_text_size" />

</RelativeLayout>