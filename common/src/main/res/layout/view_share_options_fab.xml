<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fab="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/share_fab_margin">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/more_share_options"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="@dimen/share_button_alpha"
            app:borderWidth="0dp"
            app:elevation="0dp"
            app:fabSize="normal"
            app:pressedTranslationZ="0dp"
            fab:borderWidth="0dp" />

        <com.newshunt.common.view.customview.fontview.NHTextView
            android:id="@+id/fab_share_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:elevation="@dimen/fab_share_elevation_size"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@android:color/white"
            android:visibility="gone"
            android:textStyle="bold"
            android:textSize="@dimen/fab_share_text_size" />
    </FrameLayout>

</RelativeLayout>